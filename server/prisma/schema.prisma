datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement())
  username String   @unique
  password String
  masses   Mass[]
}

model Mass {
  id           Int      @id @default(autoincrement())
  userId       Int
  massDate     DateTime @default(now())
  type         MassType
  description  String?
  serialNumber Int?
  source       String?
  
  user         User     @relation(fields: [userId], references: [id])
}

enum MassType {
  PERSONAL
  BULK
  FIXED_DATE
}

